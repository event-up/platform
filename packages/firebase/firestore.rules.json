rules_version = '2';

service cloud.firestore {
  match /databases/{database
  }/documents {
    // Organizers collection access control
    // Only the authenticated user can access their own organizer document and all subcollections
    match /Organizers/{organizerId
    }/{document=**
    } {
      allow read, write: if request.auth != null && request.auth.uid == organizerId;
    }
    // Deny all other access by default
    match /{document=**
    } {
      allow read, write: if false;
    }
  }
}